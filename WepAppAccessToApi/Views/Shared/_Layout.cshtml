<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WepAppAccessToApi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>


<body>

    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-6" href="#">Authorize methods</a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <input class="form-control form-control-dark w-100 rounded-0 border-0" type="text">
        <div class="navbar-nav">
            <div class="nav-item text-nowrap">
                <a class="nav-link px-3" href="#">Sign out</a>
            </div>
        </div>
    </header>

    <div class="container-fluid">
            <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <img src="~/icons8-api-100.png" class="d-inline-block align-middle rounded" />
                </a>
                <hr />
                <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                    Select methods
                </button>

                <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasExampleLabel">Select</h5>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <partial name="_LoginPartial" />
                        <hr />
                        <div>
                            Wybierz typ autoryzacji
                        </div>
                        <div>
                            <ul class="nav flex-column">

                                <li>
                                    <a class="nav-link text-dark border border-success rounded-pill border-3" asp-area="" asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-house "></i>
                                        Home
                                    </a>
                                </li>

                                <li>
                                    <a class="nav-link text-dark border border-warning rounded-pill border-2" asp-area="" asp-controller="User" asp-action="Index">
                                        <i class="bi bi-key"></i>
                                        Get users from Api (APiKey)
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark border border-warning rounded-pill border-2" asp-area="" asp-controller="UserBearer" asp-action="Index">
                                        <img src="~/icons8-mail-32.png" class="d-inline-block align-middle rounded" />
                                        Get users from Api Users with token authorize (Bearer)
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="UserBearer" asp-action="GetAllByToken">
                                        <img src="~/81052_mb_tok_icon_32.png" class="d-inline-block align-middle rounded" />
                                        Get users from Api Users with token authorize (Bearer)
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="UserBearer" asp-action="GetRolles">
                                        <img src="~/free-32.png" class="d-inline-block align-middle rounded" />
                                        Get users from Api Roles without authorize (Bearer)
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="WebAppiUsers" asp-action="Index">
                                        <i class="bi bi-person me-2"></i>
                                        Get users from WebAppiUsers(inny projekt Api)
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark border border-success rounded active" asp-area="" asp-controller="WebAppiNba" asp-action="Index">
                                        <i class="bi bi-people"></i>
                                        Get users from WebAppiNBA
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="WebAppiNba" asp-action="GetAllUsersWithAuthenticate">
                                        <i class="bi bi-key"></i>
                                        Get users from WebAppiNBA(BasicAuthorize)
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            <section class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="card bg-dark text-white">

                    <div class="col-10 border-top">
                        @RenderBody()
                    </div>

                    <img class="card-img" style="width: 85rem;" src="https://images.unsplash.com/photo-1664993981856-2076348ed8f9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="Card image">
                </div>
            </section>
            </div>
     </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ShotApi.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
