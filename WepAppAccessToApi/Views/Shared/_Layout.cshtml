<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WepAppAccessToApi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>

<body>
    <main role="main">
        <div class="row">

            <div class="col-2">

                <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <img src="~/icons8-api-100.png" class="d-inline-block align-middle rounded"/>                
                </a>

                <hr>

                <ul class="nav nav-pills flex-column mb-auto">

                    <partial name="_LoginPartial" />

                    <li>
                        <a class="nav-link text-dark border border-primary rounded" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house "></i>
                            Home
                        </a>
                    </li>

                    <li>
                        <a class="nav-link text-dark border border-warning rounded" asp-area="" asp-controller="User" asp-action="Index">
                            <i class="bi bi-key"></i>
                            Get users from Api (APiKey)
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="UserBearer" asp-action="Index">
                            <img src="~/icons8-mail-48.png" class="d-inline-block align-middle rounded"/>                           
                            Get users from Api Users with token authorize (Bearer)
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="UserBearer" asp-action="GetAllByToken">
                            <img src="~/81052_mb_tok_icon_48.png" class="d-inline-block align-middle rounded"/>  
                            Get users from Api Users with token authorize (Bearer)
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="UserBearer" asp-action="GetRolles">
                            <img src="~/free-48.png" class="d-inline-block align-middle rounded"/>  
                            Get users from Api Roles without authorize (Bearer)
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="WebAppiUsers" asp-action="Index">
                            <i class="bi bi-person me-2"></i>
                            Get users from WebAppiUsers(inny projekt Api)
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="WebAppiNba" asp-action="Index">
                            <i class="bi bi-people"></i>
                            Get users from WebAppiNBA
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="WebAppiNba" asp-action="GetAllUsersWithAuthenticate">
                            <i class="bi bi-key"></i>
                            Get users from WebAppiNBA(BasicAuthorize)
                        </a>
                    </li>
                </ul>

            </div>

            <div class="col-10 border-top">
                @RenderBody()
            </div>

        </div>
    </main>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
