<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WepAppAccessToApi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>

<body class="mybody-bg-image">


        <div class="row">


        <div class="d-flex flex-column flex-shrink-0 p-3" style="width: 300px;">

            <nav class="hb-navbar hb-navbar-top navbar sticky-top navbar-expand-sm navbar-toggleable-sm box-shadow">


                <ul class="nav nav-pills flex-column mb-auto">

                    <li>
                        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                            <img src="~/icons8-api-100.png" class="d-inline-block align-middle rounded" />
                        </a>
                    </li>

                    <partial name="_LoginPartial" />

                    <hr />

                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            Main Menu
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="nav-link text-dark border border-success rounded-pill border-3" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house "></i>
                                    Home
                                </a>
                            </li>

                            <li>
                                <a class="nav-link text-dark border border-warning rounded-pill border-2" asp-area="" asp-controller="User" asp-action="Index">
                                    <i class="bi bi-key"></i>
                                    Get users from Api (APiKey)
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="UserBearer" asp-action="Index">
                                    <img src="~/icons8-mail-48.png" class="d-inline-block align-middle rounded" />
                                    Get users from Api Users with token authorize (Bearer)
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="UserBearer" asp-action="GetAllByToken">
                                    <img src="~/81052_mb_tok_icon_48.png" class="d-inline-block align-middle rounded" />
                                    Get users from Api Users with token authorize (Bearer)
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="UserBearer" asp-action="GetRolles">
                                    <img src="~/free-48.png" class="d-inline-block align-middle rounded" />
                                    Get users from Api Roles without authorize (Bearer)
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="WebAppiUsers" asp-action="Index">
                                    <i class="bi bi-person me-2"></i>
                                    Get users from WebAppiUsers(inny projekt Api)
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-dark border border-success rounded active" asp-area="" asp-controller="WebAppiNba" asp-action="Index">
                                    <i class="bi bi-people"></i>
                                    Get users from WebAppiNBA
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="WebAppiNba" asp-action="GetAllUsersWithAuthenticate">
                                    <i class="bi bi-key"></i>
                                    Get users from WebAppiNBA(BasicAuthorize)
                                </a>
                            </li>
                        </ul>
                    </div>
                </ul>



                </nav>

            </div>

            <div class="col-10 border-top">
                @RenderBody()
            </div>

        </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ShotApi.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
